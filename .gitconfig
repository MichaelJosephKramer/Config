[alias]
  alias = !git config -l | grep alias | cut -c 7- | sort
  br    = for-each-ref --sort=-committerdate refs/heads/ --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(color:red)%(objectname:short)%(color:reset) - %(contents:subject) - %(authorname) (%(color:green)%(committerdate:relative)%(color:reset))'
  ci    = commit
  co    = checkout
  flush = !git branch --merged master | grep -v master | xargs git branch -d && git remote prune origin
  hist  = log --pretty=format:\"%Cred%h%Creset %ad | %s%d %C(bold blue)[%an]%Creset %Cgreen(%cr)%Creset\" --graph --date=short
  last  = !git hist -1
  me    = !git hist --author=michael@sage.house
  gpull = pull origin HEAD
  gpush = push origin HEAD
  sha   = !git rev-parse HEAD | tr -d \"\n\" | cut -c -7 | pbcopy
  st    = status
  this  = !git init && git add . && git commit -m 'Initial commit'
[color]
  ui = true
[core]
  editor       = /usr/local/bin/nvim
  pager        = less -F -X
  excludesfile = ~/.gitignore-global
[credential]
  helper = osxkeychain
[diff]
  submodule = log
[fetch]
  recurseSubmodules = on-demand
[heroku]
  account = sagehouse
[pull]
  rebase = true
[status]
  submoduleSummary = true
[user]
  name  = Michael Joseph Kramer
  email = michael@sage.house
