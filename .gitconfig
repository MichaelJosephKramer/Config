[alias]
  alias       = !git config -l | grep alias | cut -c 7- | sort
  amend       = commit -a --amend --no-edit
  br          = branch
  branch-name = !git rev-parse --abbrev-ref HEAD
  brl         = for-each-ref --sort=-committerdate refs/heads/ --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(color:red)%(objectname:short)%(color:reset) - %(contents:subject) - %(authorname) (%(color:green)%(committerdate:relative)%(color:reset))'
  ci          = commit
  co          = checkout
  cob         = checkout -b
  flush       = !git branch --merged master | grep -v master | xargs git branch -d && git remote prune origin
  new         = !git pull origin $(git branch-name)
  pub         = !git push origin $(git branch-name)
  hist        = log --pretty=format:\"%Cred%h%Creset %ad | %s%d %C(bold blue)[%an]%Creset %Cgreen(%cr)%Creset\" --graph --date=short
  last        = !git hist -1
  me          = !git hist --author=michael@sage.house
  sha         = !git rev-parse HEAD | cut -c -8 | tr -d '\n' | pbcopy
  st          = status
  this        = !git init && git add . && git commit -m 'Initial commit'
  wip         = commit -am "WIP"
[color]
  ui = true
[core]
  editor       = /usr/local/bin/nvim
  pager        = less -F -X
  excludesfile = ~/.gitignore-global
[credential]
  helper = osxkeychain
[heroku]
  account = sagehouse
[pull]
  rebase = true
[user]
  name  = Michael Joseph Kramer
  email = michael@sage.house
