[alias]
  alias  = !git config -l | grep alias | cut -c 7- | sort
  hist   = log --pretty=format:\"%Cred%h%Creset %ad | %s%d %C(bold blue)[%an]%Creset %Cgreen(%cr)%Creset\" --graph --date=short
  last   = cat-file commit HEAD
  this   = !git init && git add . && git commit -m 'Initial commit'
  sha    = !git rev-parse HEAD | tr -d \"\n\" | cut -c -7 | pbcopy
  br     = !git name-rev HEAD --name-only | tr -d \"\n\" | pbcopy
  flush  = !git branch --merged master | grep -v master | xargs git branch -d && git remote prune origin
  me     = log --pretty=format:\"%Cred%h%Creset %ad | %s%d %C(bold blue)[%an]%Creset %Cgreen(%cr)%Creset\" --date=short --author=michael@sage.house
[color]
  ui = true
[core]
  editor       = /usr/local/bin/vim
  pager        = less -F -X
  excludesfile = ~/.gitignore-global
[credential]
  helper = osxkeychain
[diff]
  submodule = log
[fetch]
  recurseSubmodules = on-demand
[heroku]
  account = sagehouse
[pull]
  rebase = true
[status]
  submoduleSummary = true
[user]
  name  = Michael Joseph Kramer
  email = michael@sage.house
